<h1>Редактирование задачи</h1>
 
<%= form_for @task do |f| %>
 
  <p>
    <%= f.label :title, "Название" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text, "Описание" %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit "Сохранить" %>
  </p>
 
<% end %>
 
<%= link_to 'Назад', root_path %>